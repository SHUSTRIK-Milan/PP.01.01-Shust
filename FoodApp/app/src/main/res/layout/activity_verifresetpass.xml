<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.verifresetpass">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_background"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/login_btn_back"
        android:onClick="btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.04"/>

    <TextView
        android:id="@+id/verifreset_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18pt"
        app:layout_constraintStart_toStartOf="@id/login_btn_back"
        app:layout_constraintTop_toTopOf="@id/login_btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/verifreset_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please type the verification code sent to Email"
        app:layout_constraintStart_toStartOf="@+id/verifreset_tv_1"
        app:layout_constraintTop_toBottomOf="@+id/verifreset_tv_1"/>

    <EditText
        android:id="@+id/verifreset_et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="8pt"
        android:hint="000000"
        android:maxLength="6"
        android:inputType="number"
        android:textAlignment="center"
        android:letterSpacing="2.5"
        android:background="@drawable/custom_edittext1"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/verifreset_tv_2"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/verifreset_btn_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verifreset_et_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/orange"
        android:text="Reset"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>