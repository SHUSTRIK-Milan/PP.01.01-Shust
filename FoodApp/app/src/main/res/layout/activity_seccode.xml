<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.seccode">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_background"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/seccode_img_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_lock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/seccode_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Security Code"
        app:layout_constraintTop_toBottomOf="@+id/seccode_img_lock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/seccode_et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="8pt"
        android:hint="0000"
        android:maxLength="4"
        android:textAlignment="center"
        android:letterSpacing="4"
        android:background="@drawable/custom_edittext1"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/seccode_tv_1"
        android:layout_marginTop="30dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/seccode_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seccode_et_code"/>

    <Button
        android:onClick="seccode_btn_exit"
        android:id="@+id/seccode_btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exit"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seccode_btn_confirm"/>

</androidx.constraintlayout.widget.ConstraintLayout>